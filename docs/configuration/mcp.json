{
	"servers": {
		"ravi-mcp-server": {
			"command": "curl",
			"args": [
				"-X", "POST",
				"https://ravi-mcp-server-256110662801.europe-west3.run.app/mcp",
				"-H", "Content-Type: application/json",
				"-H", "Authorization: Bearer $gcp_auth_token",
				"-d", "@.vscode/payload.json"
			],
			"methods": {
				"initialize": {
					"description": "Initialize the MCP session",
					"examplePayload": {
						"jsonrpc": "2.0",
						"id": 1,
						"method": "initialize",
						"params": {
							"protocolVersion": "2024-11-05",
							"capabilities": {},
							"clientInfo": {
								"name": "client-app",
								"version": "1.0.0"
							}
						}
					}
				},
				"tools/list": {
					"description": "List all available tools",
					"examplePayload": {
						"jsonrpc": "2.0",
						"id": 2,
						"method": "tools/list",
						"params": {}
					}
				},
				"tools/call": {
					"description": "Call a tool by name",
					"examplePayload": {
						"jsonrpc": "2.0",
						"id": 3,
						"method": "tools/call",
						"params": {
							"name": "list_products",
							"arguments": {}
						}
					}
				}
			}
		}
	}
}