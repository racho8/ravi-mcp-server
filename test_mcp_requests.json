{
  "examples": {
    "initialize": {
      "description": "Initialize the MCP connection",
      "request": {
        "jsonrpc": "2.0",
        "id": 1,
        "method": "initialize",
        "params": {
          "protocolVersion": "2024-11-05",
          "capabilities": {},
          "clientInfo": {
            "name": "test-client",
            "version": "1.0.0"
          }
        }
      },
      "curl_command": "curl -X POST https://your-server/mcp -H 'Content-Type: application/json' -d '{\"jsonrpc\":\"2.0\",\"id\":1,\"method\":\"initialize\",\"params\":{\"protocolVersion\":\"2024-11-05\",\"capabilities\":{},\"clientInfo\":{\"name\":\"test-client\",\"version\":\"1.0.0\"}}}'"
    },
    "tools_list": {
      "description": "List all available tools",
      "request": {
        "jsonrpc": "2.0",
        "id": 2,
        "method": "tools/list"
      },
      "curl_command": "curl -X POST https://your-server/mcp -H 'Content-Type: application/json' -d '{\"jsonrpc\":\"2.0\",\"id\":2,\"method\":\"tools/list\"}'"
    },
    "tools_call_create_product": {
      "description": "Create a new product",
      "request": {
        "jsonrpc": "2.0",
        "id": 3,
        "method": "tools/call",
        "params": {
          "name": "create_product",
          "arguments": {
            "name": "MacBook Pro",
            "category": "Electronics",
            "segment": "Laptops",
            "price": 2499
          }
        }
      },
      "curl_command": "curl -X POST https://your-server/mcp -H 'Content-Type: application/json' -d '{\"jsonrpc\":\"2.0\",\"id\":3,\"method\":\"tools/call\",\"params\":{\"name\":\"create_product\",\"arguments\":{\"name\":\"MacBook Pro\",\"category\":\"Electronics\",\"segment\":\"Laptops\",\"price\":2499}}}'"
    },
    "tools_call_list_products": {
      "description": "List all products",
      "request": {
        "jsonrpc": "2.0",
        "id": 4,
        "method": "tools/call",
        "params": {
          "name": "list_products"
        }
      },
      "curl_command": "curl -X POST https://your-server/mcp -H 'Content-Type: application/json' -d '{\"jsonrpc\":\"2.0\",\"id\":4,\"method\":\"tools/call\",\"params\":{\"name\":\"list_products\"}}'"
    },
    "tools_call_get_product": {
      "description": "Get a specific product by ID",
      "request": {
        "jsonrpc": "2.0",
        "id": 5,
        "method": "tools/call",
        "params": {
          "name": "get_product",
          "arguments": {
            "id": "product-123"
          }
        }
      },
      "curl_command": "curl -X POST https://your-server/mcp -H 'Content-Type: application/json' -d '{\"jsonrpc\":\"2.0\",\"id\":5,\"method\":\"tools/call\",\"params\":{\"name\":\"get_product\",\"arguments\":{\"id\":\"product-123\"}}}'"
    },
    "tools_call_health_check": {
      "description": "Check service health",
      "request": {
        "jsonrpc": "2.0",
        "id": 6,
        "method": "tools/call",
        "params": {
          "name": "health_check"
        }
      },
      "curl_command": "curl -X POST https://your-server/mcp -H 'Content-Type: application/json' -d '{\"jsonrpc\":\"2.0\",\"id\":6,\"method\":\"tools/call\",\"params\":{\"name\":\"health_check\"}}'"
    }
  },
  "expected_responses": {
    "initialize": {
      "jsonrpc": "2.0",
      "id": 1,
      "result": {
        "protocolVersion": "2024-11-05",
        "capabilities": {
          "tools": {}
        },
        "serverInfo": {
          "name": "ravi-mcp-server",
          "version": "1.0.0"
        }
      }
    },
    "tools_list": {
      "jsonrpc": "2.0",
      "id": 2,
      "result": {
        "tools": [
          {
            "name": "welcome_message",
            "description": "Get the welcome message from the product service",
            "inputSchema": {
              "type": "object",
              "properties": {}
            }
          }
        ]
      }
    },
    "tools_call_success": {
      "jsonrpc": "2.0",
      "id": 3,
      "result": {
        "content": [
          {
            "type": "text",
            "data": {
              "id": "product-123",
              "name": "MacBook Pro",
              "category": "Electronics"
            }
          }
        ]
      }
    },
    "error_method_not_found": {
      "jsonrpc": "2.0",
      "id": 1,
      "error": {
        "code": -32601,
        "message": "Method not found",
        "data": "Unknown method: invalid_method"
      }
    }
  }
}
